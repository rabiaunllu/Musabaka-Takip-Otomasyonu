<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="750.0" prefWidth="1000.0" styleClass="main-background" stylesheets="@style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.footballmanager.controller.FixturesController">
    <children>

        <VBox spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

            <padding>
                <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
            </padding>

            <children>
                <Label styleClass="page-title" text="Fikstür" />

                <HBox alignment="CENTER_LEFT" spacing="15.0">
                    <children>
                        <Label style="-fx-text-fill: #4ade80; -fx-font-weight: bold;" text="Hafta Seç:" />
                        <ComboBox fx:id="weekSelector" prefWidth="150.0" promptText="Hafta 12" styleClass="combo-box" />
                    </children>
                    <VBox.margin>
                        <Insets bottom="10.0" />
                    </VBox.margin>
                </HBox>

                <VBox styleClass="table-container" style="-fx-border-color: rgba(34, 197, 94, 0.3); -fx-background-color: linear-gradient(to bottom right, #0f172a, rgba(20, 83, 45, 0.3));" VBox.vgrow="ALWAYS">
                    <children>

                        <HBox style="-fx-background-color: linear-gradient(to right, rgba(20, 83, 45, 0.5), rgba(6, 78, 59, 0.5)); -fx-padding: 15; -fx-background-radius: 11 11 0 0; -fx-border-color: transparent transparent rgba(34, 197, 94, 0.3) transparent; -fx-border-width: 0 0 1 0;">
                            <children>
                                <Label fx:id="weekHeaderLabel" style="-fx-text-fill: #86efac; -fx-font-size: 16px; -fx-font-weight: bold;" text="Hafta 12 Fikstürü" />
                            </children>
                        </HBox>

                        <TableView fx:id="fixturesTable" styleClass="modern-scroll" stylesheets="@style.css" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="homeTeamColumn" prefWidth="200.0" text="Ev Sahibi">
                                    <styleClass>
                                        <String fx:value="column-header" />
                                    </styleClass>
                                </TableColumn>

                                <TableColumn fx:id="scoreColumn" prefWidth="150.0" style="-fx-alignment: CENTER;" text="Skor">
                                    <styleClass>
                                        <String fx:value="column-header" />
                                    </styleClass>
                                </TableColumn>

                                <TableColumn fx:id="awayTeamColumn" prefWidth="200.0" text="Deplasman">
                                    <styleClass>
                                        <String fx:value="column-header" />
                                    </styleClass>
                                </TableColumn>

                                <TableColumn fx:id="dateColumn" prefWidth="180.0" text="Maç Tarihi">
                                    <styleClass>
                                        <String fx:value="column-header" />
                                    </styleClass>
                                </TableColumn>

                                <TableColumn fx:id="actionsColumn" prefWidth="150.0" style="-fx-alignment: CENTER;" text="İşlemler">
                                    <styleClass>
                                        <String fx:value="column-header" />
                                    </styleClass>
                                </TableColumn>
                            </columns>

                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                            </columnResizePolicy>

                            <style>
                                -fx-background-color: transparent;
                                -fx-base: transparent;
                                -fx-control-inner-background: transparent;
                                -fx-background-insets: 0;
                            </style>
                        </TableView>
                    </children>
                </VBox>

                <HBox alignment="CENTER_LEFT">
                    <children>
                        <Button fx:id="createFixtureBtn" mnemonicParsing="false" styleClass="btn-primary" text="Yeni Fikstür Oluştur">
                            <padding>
                                <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                            </padding>
                        </Button>
                    </children>
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin>
                </HBox>

            </children>
        </VBox>
    </children>
</AnchorPane>