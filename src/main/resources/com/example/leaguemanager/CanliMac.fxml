<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>

<AnchorPane styleClass="main-background" stylesheets="@style.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.leaguemanager.controller.LiveMatchController">
    <children>

       <ScrollPane fitToHeight="true" fitToWidth="true" styleClass="modern-scroll" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
          <content>
              <VBox spacing="20.0">
                  <padding>
                      <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
                  </padding>
      
                  <children>
                      <Label styleClass="page-title" text="Canlı Maç" />
      
                      <VBox alignment="CENTER" spacing="15.0" style="-fx-background-color: linear-gradient(to bottom right, #0f172a, rgba(69, 10, 10, 0.4)); -fx-border-color: rgba(239, 68, 68, 0.3); -fx-background-radius: 12; -fx-border-radius: 12; -fx-effect: dropshadow(three-pass-box, rgba(220, 38, 38, 0.1), 15, 0, 0, 4);">
                          <padding>
                              <Insets bottom="30.0" top="30.0" />
                          </padding>
                          <children>
      
                              <HBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" spacing="8.0" style="-fx-background-color: linear-gradient(to right, #dc2626, #db2777); -fx-background-radius: 20; -fx-effect: dropshadow(three-pass-box, rgba(220, 38, 38, 0.5), 10, 0, 0, 2);">
                                  <padding>
                                      <Insets bottom="5.0" left="15.0" right="15.0" top="5.0" />
                                  </padding>
                                  <children>
                                      <Circle fx:id="livePulseCircle" fill="WHITE" radius="4.0" stroke="BLACK" strokeType="INSIDE" strokeWidth="0.0" />
                                      <Label fx:id="matchTimeLabel" style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px;" text="CANLI - 67'" />
                                  </children>
                              </HBox>
      
                              <HBox alignment="CENTER" spacing="50.0">
                                  <children>
                                      <VBox alignment="CENTER_RIGHT" prefWidth="250.0">
                                          <children>
                                              <Label fx:id="homeTeamLabel" style="-fx-text-fill: white; -fx-font-size: 20px;" text="Ev Sahibi" />
                                              <Label fx:id="homeScoreLabel" style="-fx-text-fill: #22d3ee; -fx-font-size: 60px; -fx-font-weight: bold;" text="0">
                                                  <font>
                                                      <Font size="60.0" />
                                                  </font>
                                              </Label>
                                          </children>
                                      </VBox>
      
                                      <Label style="-fx-text-fill: #52525b; -fx-font-size: 24px; -fx-font-weight: bold;" text="VS" />
      
                                      <VBox alignment="CENTER_LEFT" prefWidth="250.0">
                                          <children>
                                              <Label fx:id="awayTeamLabel" style="-fx-text-fill: white; -fx-font-size: 20px;" text="Deplasman" />
                                              <Label fx:id="awayScoreLabel" style="-fx-text-fill: #e879f9; -fx-font-size: 60px; -fx-font-weight: bold;" text="0">
                                                  <font>
                                                      <Font size="60.0" />
                                                  </font>
                                              </Label>
                                          </children>
                                      </VBox>
                                  </children>
                              </HBox>
                          </children>
                      </VBox>
      
                      <HBox spacing="20.0" VBox.vgrow="ALWAYS">
                          <children>
      
                              <VBox style="-fx-border-color: rgba(168, 85, 247, 0.3); -fx-background-color: linear-gradient(to bottom right, #0f172a, rgba(59, 7, 100, 0.3));" styleClass="table-container" HBox.hgrow="ALWAYS">
                                  <children>
                                      <HBox style="-fx-background-color: linear-gradient(to right, rgba(88, 28, 135, 0.5), rgba(131, 24, 67, 0.5)); -fx-padding: 15; -fx-background-radius: 11 11 0 0; -fx-border-color: transparent transparent rgba(168, 85, 247, 0.3) transparent; -fx-border-width: 0 0 1 0;">
                                          <children>
                                              <Label style="-fx-text-fill: #d8b4fe; -fx-font-size: 16px; -fx-font-weight: bold;" text="Maç Olayları" />
                                          </children>
                                      </HBox>
      
                                      <ScrollPane fitToWidth="true" hbarPolicy="NEVER" styleClass="modern-scroll" stylesheets="@style.css" VBox.vgrow="ALWAYS">
                                          <content>
                                              <VBox fx:id="eventsContainer" spacing="10.0" style="-fx-background-color: transparent;">
                                                  <padding>
                                                      <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                                                  </padding>
                                              </VBox>
                                          </content>
                                      </ScrollPane>
                                  </children>
                              </VBox>
      
                              <VBox spacing="20.0" style="-fx-border-color: rgba(6, 182, 212, 0.3); -fx-background-color: linear-gradient(to bottom right, #0f172a, rgba(8, 51, 68, 0.3)); -fx-background-radius: 12; -fx-border-radius: 12; -fx-padding: 20;" HBox.hgrow="ALWAYS">
                                  <children>
                                      <Label style="-fx-text-fill: #22d3ee; -fx-font-size: 18px; -fx-font-weight: bold;" text="Yönetici Kontrolleri" />
      
                                      <VBox spacing="8.0">
                                          <Label style="-fx-text-fill: #22d3ee; -fx-font-size: 14px;" text="Gol Ekle" />
                                          <HBox spacing="10.0">
                                              <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleAddHomeGoal" style="-fx-background-color: linear-gradient(to right, #16a34a, #059669); -fx-text-fill: white; -fx-background-radius: 6; -fx-font-weight: bold; -fx-cursor: hand;" text="Ev Sahibi Gol" HBox.hgrow="ALWAYS" />
                                              <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleAddAwayGoal" style="-fx-background-color: linear-gradient(to right, #16a34a, #059669); -fx-text-fill: white; -fx-background-radius: 6; -fx-font-weight: bold; -fx-cursor: hand;" text="Deplasman Gol" HBox.hgrow="ALWAYS" />
                                          </HBox>
                                      </VBox>
      
                                      <VBox spacing="8.0">
                                          <Label style="-fx-text-fill: #22d3ee; -fx-font-size: 14px;" text="Kart Ekle" />
                                          <HBox spacing="10.0">
                                              <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleAddHomeCard" style="-fx-background-color: linear-gradient(to right, #ca8a04, #ea580c); -fx-text-fill: white; -fx-background-radius: 6; -fx-font-weight: bold; -fx-cursor: hand;" text="Ev Sahibi Kart" HBox.hgrow="ALWAYS" />
                                              <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleAddAwayCard" style="-fx-background-color: linear-gradient(to right, #ca8a04, #ea580c); -fx-text-fill: white; -fx-background-radius: 6; -fx-font-weight: bold; -fx-cursor: hand;" text="Deplasman Kart" HBox.hgrow="ALWAYS" />
                                          </HBox>
                                      </VBox>
                              <Label style="-fx-text-fill: #22d3ee;" text="Kırmızı Kart Ekle" />
                              <HBox alignment="CENTER" prefHeight="2.0" prefWidth="248.0" spacing="10.0">
                                 <children>
                                    <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleAddHomeRedCard" prefHeight="23.0" prefWidth="115.0" style="-fx-background-color: linear-gradient(to right, #e7000b,#e60076); -fx-text-fill: white; -fx-background-radius: 6; -fx-font-weight: bold; -fx-cursor: hand;" text="Ev Sahibi Kırmızı" HBox.hgrow="ALWAYS" />
                                    <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleAddAwayRedCard" prefHeight="23.0" prefWidth="119.0" style="-fx-background-color: linear-gradient(to right, #e7000b,#e60076); -fx-text-fill: white; -fx-background-radius: 6; -fx-font-weight: bold; -fx-cursor: hand;" text="Deplasman Kırmızı" HBox.hgrow="ALWAYS" />
                                 </children>
                              </HBox>
      
                                      <VBox spacing="8.0">
                                          <Label style="-fx-text-fill: #a1a1aa; -fx-font-size: 14px;" text="Maç Dakikası" />
                                      </VBox>
                              <Label fx:id="lblSure" prefHeight="32.0" prefWidth="234.0" style="-fx-text-fill: #22d3ee; -fx-font-size: 40px; -fx-font-weight: bold;" text="00:00">
                                 <font>
                                    <Font size="4.0" />
                                 </font>
                                 <VBox.margin>
                                    <Insets top="-20.0" />
                                 </VBox.margin>
                              </Label>
                              <HBox prefHeight="2.0" prefWidth="248.0" spacing="10.0">
                                 <children>
                                    <Button fx:id="btnBaslat" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleStartTimer" prefHeight="23.0" prefWidth="115.0" style="-fx-background-color: linear-gradient(to right, #93A739,#6ba739); -fx-text-fill: white; -fx-background-radius: 6; -fx-font-weight: bold; -fx-cursor: hand;" text="B A Ş L A T" />
                                    <Button fx:id="btnDurdur" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleStopTimer" prefHeight="23.0" prefWidth="119.0" style="-fx-background-color: linear-gradient(to right, #fc6303,#FF8105); -fx-text-fill: white; -fx-background-radius: 6; -fx-font-weight: bold; -fx-cursor: hand;" text="D U R D U R" />
                                 </children>
                              </HBox>
      
                                      <Region VBox.vgrow="ALWAYS" />
      
                                      <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleEndMatch" style="-fx-background-color: linear-gradient(to right, #dc2626, #db2777); -fx-text-fill: white; -fx-background-radius: 8; -fx-font-weight: bold; -fx-padding: 10; -fx-effect: dropshadow(three-pass-box, rgba(220, 38, 38, 0.4), 10, 0, 0, 3); -fx-cursor: hand;" text="Maçı Bitir" />
      
                                  </children>
                              </VBox>
                          </children>
                      </HBox>
      
                  </children>
              </VBox>
          </content>
       </ScrollPane>
    </children>
</AnchorPane>
