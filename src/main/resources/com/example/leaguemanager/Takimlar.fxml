<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="700.0" prefWidth="1000.0" styleClass="main-background" stylesheets="@style.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.leaguemanager.controller.TakimlarController">
   <children>
      <ScrollPane fitToHeight="true" fitToWidth="true" styleClass="modern-scroll" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <content>
            <VBox spacing="20.0">
               <padding>
                  <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
               </padding>
               <children>
                  <Label styleClass="page-title" text="Takımlar" />
                  <HBox prefHeight="526.0" prefWidth="839.0" spacing="20.0" VBox.vgrow="ALWAYS">
                     <children>
                        <VBox styleClass="table-container" HBox.hgrow="ALWAYS">
                           <children>
                              <Label maxWidth="1.7976931348623157E308" prefHeight="50.0" prefWidth="491.0" styleClass="table-header" text="Takım Listesi" />
                              <TableView fx:id="tblTakimlar" VBox.vgrow="ALWAYS" styleClass="modern-scroll" stylesheets="@style.css">
                                <columns>
                                  <TableColumn fx:id="colAd" prefWidth="75.0" text="Takım Adı" />
                                  <TableColumn fx:id="colSehir" prefWidth="75.0" text="Şehir" />
                                    <TableColumn fx:id="colStadyum" prefWidth="75.0" text="Stadyum" />
                                </columns>
                                 <columnResizePolicy>
                                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                 </columnResizePolicy>
                              </TableView>
                           </children>
                        </VBox>
                        <VBox fx:id="detayPaneli" minWidth="350.0" prefHeight="150.0" prefWidth="350.0" spacing="10.0" HBox.hgrow="NEVER">
                           <styleClass>
                              <String fx:value="table-container" />
                              <String fx:value="purple-table" />
                           </styleClass>
                           <padding>
                              <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                           </padding>
                           <children>
                              <Label maxWidth="1.7976931348623157E308" prefHeight="14.0" prefWidth="150.0" text="Takım Detayları">
                                 <VBox.margin>
                                    <Insets />
                                 </VBox.margin>
                                 <styleClass>
                                    <String fx:value="card-title" />
                                    <String fx:value="table-header" />
                                 </styleClass>
                                 <padding>
                                    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                                 </padding>
                              </Label>
                              <Label styleClass="column-label" text="Takım Adı">
                                 <padding>
                                    <Insets left="10.0" right="10.0" />
                                 </padding>
                              </Label>
                              <TextField fx:id="txtAd" prefHeight="30.0" prefWidth="323.0" promptText="Takım adı giriniz..." styleClass="input-field">
                                 <VBox.margin>
                                    <Insets left="10.0" right="10.0" />
                                 </VBox.margin>
                                 <padding>
                                    <Insets left="5.0" />
                                 </padding>
                              </TextField>
                              <Label styleClass="column-label" text="Şehir">
                                 <padding>
                                    <Insets left="10.0" right="10.0" />
                                 </padding>
                              </Label>
                              <TextField fx:id="txtSehir" prefHeight="30.0" prefWidth="40.0" promptText="Şehir giriniz...">
                                 <padding>
                                    <Insets left="5.0" />
                                 </padding>
                                 <VBox.margin>
                                    <Insets left="10.0" right="10.0" />
                                 </VBox.margin>
                              </TextField>
                              <Label styleClass="column-label" text="Stadyum">
                                 <padding>
                                    <Insets left="10.0" right="10.0" />
                                 </padding>
                              </Label>
                              <TextField fx:id="txtStadyum" prefHeight="30.0" prefWidth="40.0" promptText="Stadyum adı giriniz...">
                                 <padding>
                                    <Insets left="5.0" />
                                 </padding>
                                 <VBox.margin>
                                    <Insets left="10.0" right="10.0" />
                                 </VBox.margin>
                              </TextField>
                              <Region prefHeight="221.0" prefWidth="349.0" />
                              <HBox prefHeight="100.0" prefWidth="200.0" spacing="15.0">
                                 <children>
                                    <Button fx:id="btnEkle" mnemonicParsing="false" onAction="#takimEkle" prefHeight="30.0" prefWidth="150.0" styleClass="btn-primary" text="Takım Ekle" />
                                    <Button fx:id="btnSil" mnemonicParsing="false" onAction="#takimSil" prefHeight="30.0" prefWidth="150.0" styleClass="btn-danger" text="Takımı Sil" />
                                 </children>
                                 <padding>
                                    <Insets left="20.0" right="20.0" />
                                 </padding>
                              </HBox>
                           </children>
                        </VBox>
                     </children>
                     <VBox.margin>
                        <Insets bottom="10.0" />
                     </VBox.margin>
                  </HBox>
                  <Button fx:id="btnFiksturOlustur" mnemonicParsing="false" onAction="#fiksturOlustur" styleClass="btn-fixture" text="Fikstür Oluştur">
                     <VBox.margin>
                        <Insets left="370.0" />
                     </VBox.margin>
                  </Button>
               </children>
            </VBox>
         </content>
      </ScrollPane>
   </children>
</AnchorPane>
